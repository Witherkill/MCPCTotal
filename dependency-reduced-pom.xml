<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>gilbertoscode</groupId>
  <artifactId>MCPCTotal</artifactId>
  <version>1.0</version>
  <build>
    <sourceDirectory>${project.basedir}/src/minecraft/</sourceDirectory>
    <defaultGoal>install</defaultGoal>
    <resources>
      <resource>
        <targetPath>.</targetPath>
        <filtering>true</filtering>
        <directory>${basedir}/resources/</directory>
        <includes>
          <include>*/**</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.8</version>
        <executions>
          <execution>
            <id>get-special-dependencies</id>
            <phase>verify</phase>
            <goals>
              <goal>get</goal>
            </goals>
            <configuration>
              <groupId>net.md-5</groupId>
              <artifactId>specialsource-maven-plugin</artifactId>
              <version>1.2</version>
              <repositoryId>sonatype-nexus-snapshots</repositoryId>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version>
        <configuration>
          <source>6</source>
          <target>6</target>
          <showDeprecation>true</showDeprecation>
          <compilerArgument>-Xlint:-options</compilerArgument>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.2.0</version>
        <configuration>
          <classesDirectory>${basedir}/target/classes</classesDirectory>
          <archive>
            <manifestEntries>
              <Class-Path>lib/asm-all-4.1.jar</Class-Path>
              <Main-Class>org.bukkit.craftbukkit.Main</Main-Class>
              <Implementation-Title>MCPC</Implementation-Title>
              <Implementation-Vendor>Total</Implementation-Vendor>
              <Forge-Version>${forge.version}</Forge-Version>
              <Specification-Title>Bukkit</Specification-Title>
              <Specification-Version>${project.version}</Specification-Version>
              <Specification-Vendor>Bukkit Team</Specification-Vendor>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <relocations>
            <relocation>
              <pattern>joptsimple</pattern>
              <shadedPattern>org.bukkit.craftbukkit.libs.joptsimple</shadedPattern>
            </relocation>
            <relocation>
              <pattern>jline</pattern>
              <shadedPattern>org.bukkit.craftbukkit.libs.jline</shadedPattern>
            </relocation>
            <relocation>
              <pattern>org.ibex</pattern>
              <shadedPattern>org.bukkit.craftbukkit.libs.org.ibex</shadedPattern>
            </relocation>
            <relocation>
              <pattern>org.gjt</pattern>
              <shadedPattern>org.bukkit.craftbukkit.libs.org.gjt</shadedPattern>
            </relocation>
            <relocation>
              <pattern>com.google.gson</pattern>
              <shadedPattern>org.bukkit.craftbukkit.libs.com.google.gson</shadedPattern>
            </relocation>
            <relocation>
              <pattern>org.bukkit.craftbukkit</pattern>
              <shadedPattern>org.bukkit.craftbukkit.v1_5_R3</shadedPattern>
              <excludes>
                <exclude>org.bukkit.craftbukkit.Main*</exclude>
              </excludes>
            </relocation>
          </relocations>
          <filters>
            <filter>
              <artifact>net.java.jutils:jutils</artifact>
              <excludes>
                <exclude>net/java/**</exclude>
              </excludes>
            </filter>
            <filter>
              <artifact>*:*</artifact>
              <excludes>
                <exclude>META-INF/*.SF</exclude>
                <exclude>META-INF/*.DSA</exclude>
                <exclude>META-INF/*.RSA</exclude>
              </excludes>
            </filter>
            <filter>
              <artifact>net.minecraftforge:minecraft-forge</artifact>
              <excludes>
                <exclude>org/bouncycastle/**</exclude>
              </excludes>
            </filter>
          </filters>
          <transformers>
            <transformer>
              <manifestEntries>
                <Class-Path>lib/asm-all-4.1.jar</Class-Path>
                <Main-Class>org.bukkit.craftbukkit.Main</Main-Class>
                <Implementation-Title>MCPC</Implementation-Title>
                <Implementation-Vendor>Total</Implementation-Vendor>
                <Forge-Version>${forge.version}</Forge-Version>
                <Specification-Title>Bukkit</Specification-Title>
                <Specification-Version>${project.version}</Specification-Version>
                <Specification-Vendor>Bukkit Team</Specification-Vendor>
              </manifestEntries>
            </transformer>
          </transformers>
        </configuration>
      </plugin>
      <plugin>
        <groupId>net.md-5</groupId>
        <artifactId>specialsource-maven-plugin</artifactId>
        <version>1.2</version>
        <executions>
          <execution>
            <id>install-remapped-forge</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-remapped-file</goal>
            </goals>
            <configuration>
              <groupId>net.minecraftforge</groupId>
              <artifactId>minecraft-forge</artifactId>
              <version>${forge.version}-${forge.remapped.revision}</version>
              <srgIn>${mcp.mappings}</srgIn>
              <accessTransformers>
                <param>${fml.at}</param>
                <param>${forge.at}</param>
                <param>pattern:*-synthetic **</param>
              </accessTransformers>
            </configuration>
          </execution>
          <execution>
            <id>reobfuscate</id>
            <phase>package</phase>
            <goals>
              <goal>remap</goal>
            </goals>
            <configuration>
              <srgIn>${basedir}/resources/mappings/v1_5_R3/pkgmcp2obf.srg</srgIn>
              <remappedDependencies>
                <param>net.minecraftforge:minecraft-forge:${forge.version}-${forge.remapped.revision}:jar</param>
              </remappedDependencies>
              <excludedPackages>
                <param>argo</param>
                <param>org/bouncycastle</param>
              </excludedPackages>
              <finalName>MCPCTotal-${project.version}</finalName>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>lib</id>
      <url>${project.baseUri}lib</url>
    </repository>
    <repository>
      <id>mvn</id>
      <url>https://mvnrepository.com/artifact/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.ow2.asm</groupId>
      <artifactId>asm-all</artifactId>
      <version>4.1</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <properties>
    <mcp.mappings>${basedir}/resources/mappings/v1_5_R3/mcp/</mcp.mappings>
    <forge.build>738</forge.build>
    <fml.at>${basedir}/resources/fml_at.cfg</fml.at>
    <forge.version>7.8.1.${forge.build}</forge.version>
    <forge.remapped.revision>R3-MCPC</forge.remapped.revision>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <forge.at>${basedir}/resources/forge_at.cfg</forge.at>
    <bukkit.version>1.5.2-R1.1-SNAPSHOT</bukkit.version>
  </properties>
</project>
